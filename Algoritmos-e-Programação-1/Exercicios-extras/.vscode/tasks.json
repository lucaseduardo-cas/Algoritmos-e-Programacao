{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc", // Caminho para o seu compilador GCC no WSL
            "args": [
                "-fdiagnostics-color=always",
                "-g", // Flag essencial para gerar símbolos de depuração
                "${file}", // O arquivo C/C++ ativo
                "-o", // Opção para nomear o arquivo de saída
                "${fileDirname}/${fileBasenameNoExtension}" // O executável será criado na mesma pasta, sem extensão
            ],
            "options": {
                "cwd": "${fileDirname}" // Diretório de trabalho da tarefa
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true // Torna esta a tarefa de build padrão
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
